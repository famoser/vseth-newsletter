{% macro entry_base(form) %}
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.organizer) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <div class="form-group">
                {{ form_row(form.titleDe) }}
            </div>
            <div class="form-group">
                {{ form_row(form.descriptionDe) }}
                <small class="form-text text-muted external-help">
                    {{ "help.description_short"|trans({}, "entity_entry") }}
                </small>
            </div>
            <div class="form-group">
                {{ form_row(form.linkDe) }}
                <small class="form-text text-muted external-help">
                    {{ "help.link_privacy"|trans({}, "entity_entry") }}
                </small>
            </div>
        </div>
        <div class="col-md">
            <div class="form-group">
                {{ form_row(form.titleEn) }}
            </div>
            <div class="form-group">
                {{ form_row(form.descriptionEn) }}
            </div>
            <div class="external-help-spacer"></div>
            <div class="form-group">
                {{ form_row(form.linkEn) }}
            </div>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md">
            <div class="form-group">
                {{ form_row(form.startAt) }}
            </div>
        </div>
        <div class="col-md">
            <div class="form-group">
                {{ form_row(form.endAt) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.location) }}
            </div>
        </div>
    </div>
{% endmacro %}
